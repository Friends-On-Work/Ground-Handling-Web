                    <!-- /.info-box -->
                </div>

                <div class="col-12 col-sm-6 col-md-3">
                    <div class="info-box mb-3">
                        <a href="@Url.Action("Index", "Dashboard", new { area = "Reservation"})">
                            <span class="info-box-icon bg-primary"><i class="ion ion-ios-home"></i></span>
                        </a>
                        <div class="info-box-content">
                            <span class="info-box-text center">Reservation</span>
                            <span class="info-box-number"><small>Hotel Booking </small></span>
                        </div>
                        <!-- /.info-box-content -->
                    </div>
                    <!-- /.info-box -->
                </div>

                <div class="col-12 col-sm-6 col-md-3">
                    <div class="info-box mb-3">
                        <a href="@Url.Action("Index", "Recipient", new { area = "Voucher"})">
                            <span class="info-box-icon bg-primary"><i class="ion ion-ios-home"></i></span>
                        </a>
                        <div class="info-box-content">
                            <span class="info-box-text center">Voucher</span>
                            <span class="info-box-number"><small>Recipient Voucher </small></span>
                        </div>
                        <!-- /.info-box-content -->
                    </div>
