@model Ground_Handlng.DataObjects.Models.Operational.FrequentlyAskedQuestion
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{

}
<link rel="stylesheet" href="~/AdminLTE/dist/css/adminlte.min.css">
<link rel="stylesheet" href="~/AdminLTE/plugins/bootstrap/css/bootstrap.min.css">
<link rel="stylesheet" href="~/AdminLTE/plugins/datepicker/datepicker3.css" />
<style>
    input.error {
        border-color: #f00 !important;
    }

    small.required {
        color: #f00;
    }
</style>

<section class="content">
    <div class="card">
        <div class="card-body">
            @using (Html.BeginForm(FormMethod.Post, new { @class = "form-horizontal", @id = "validate", @enctype = "multipart/form-data", @role = "form" }))
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="callout callout-danger error-box-holder" id="general-error" style="display:none">
                    <h4> Please correct the following errors and sumbit again </h4>
                    <ul id="errors" class="error-box"></ul>
                </div>



                <div class="form-group">
                    <label asp-for="Question" class="control-label col-md-3"></label>
                    <div class="col-sm-7">
                        @*<input for="Question" class="form-control required" name="Question" rows="3" value="@Model.Question" />*@
                        <textarea for="Question" class="form-control required" name="Question" rows="3" value="@Model.Question"></textarea>
                    </div>
                    <span for="Question" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Answer" class="control-label col-md-3"></label>
                    <div class="col-sm-7">
                        <textarea for="Answer" class="form-control required" name="Answer" rows="3" value="@Model.Answer"></textarea>
                    </div>
                    <span for="Answer" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label asp-for="ImageUrl" class="control-label col-md-3"></label>
                    <div class="col-sm-7">
                        <input for="ImageUrl" class="form-control required" name="ImageUrl" value="@Model.ImageUrl" />
                    </div>
                    <span for="ImageUrl" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Type" class="control-label col-md-3"></label>
                    <div class="col-sm-7">
                        <input for="Type" class="form-control required" name="Type" value="@Model.Type" />
                    </div>
                    <span for="Type" class="text-danger"></span>
                </div>

                <br />
                <div class="form-group col-md-3">
                    <button type="submit" class="btn btn-success btn-block"> Save </button>
                </div>
            }
        </div>
    </div>
</section>
<script src="~/AdminLTE/plugins/datepicker/bootstrap-datepicker.js"></script>
<script src="~/AdminLTE/plugins/jquery-validation/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<script type="text/javascript">
    $(function () {
            $('.CostSavingdate').datepicker({
            format: 'yyyy-mm-dd'
        });
        $.validator.setDefaults({
            submitHandler: function () {
                // Stop the button from submitting the form:
                debugger;
                // evt.preventDefault();
                var Url = "/Operational/FrequentlyAskedQuestion/Edit";
                $('#general-error').hide();
                $('#errors').empty();
                var formData = new FormData();
                //formData.append('url', $('#url')[0].files[0]);
                var other_data = $('#validate').serializeArray();
                $.each(other_data, function (key, input) {
                    formData.append(input.name, input.value);
                });
                $.ajax({
                    url = Url,
                    type: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    cache: false,
                    success: function (data) {
                        debugger;
                        if (data.status == "3" || data.status == "4" || data.status == "5") {
                            if (data.status == "3") {
                                swal({
                                    type: 'success',
                                    title: data.message,
                                    showConfirmButton: false,
                                    timer: 3000
                                }).then(() => { window.location = "/Operational/FrequentlyAskedQuestion/Index"; });;
                                $('#modal').modal('hide');
                            }
                            else {
                                swal({
                                    type: 'error',
                                    title: data.message,
                                    showConfirmButton: false,
                                    timer: 3000
                                });
                            }
                        }
                    },
                    error: function (data) {
                        window.location = "/Operational/FrequentlyAskedQuestion/Index";
                        swal({
                            type: 'error',
                            title: data.message,
                            showConfirmButton: false,
                            timer: 3000
                        });

                    }

                });
            }
        });
        $('#validate').validate({
            ignore: [],
            errorPlacement: function () { },
            invalidHandler: function () {
                setTimeout(function () {
                    $('.nav-tabs a small.required').remove();
                    var validatePane = $('.tab-content.tab-validate .tab-pane:has(input.error)').each(function () {
                        debugger;
                        var id = $(this).attr('id');
                        $('.nav-tabs').find('a[href^="#' + id + '"]').append('<small class="required">***</small>');
                    });
                });
            },
              rules: {
                Question: {
                    required: true
                },
                Answer: {
                    required: true
                },
                ImageUrl: {
                    required: true
                },
                type: {
                    required: true
                },

            },
            messages: {
                Question: {
                    required: "Please enter a Question"
                },
                Answer: {
                    required: "Please provide a Answer",
                },
                ImageUrl: {
                    required: "Please enter a ImageUrl"
                },
                type: {
                    required: "Please enter a Type"
                },
                
            },
            errorElement: 'span',
            errorPlacement: function (error, element) {
                error.addClass('invalid-feedback');
                element.closest('.form-group').append(error);
            },
            highlight: function (element, errorClass, validClass) {
                $(element).addClass('is-invalid');
            },
            unhighlight: function (element, errorClass, validClass) {
                $(element).removeClass('is-invalid');
            }

        });

    });
</script>

