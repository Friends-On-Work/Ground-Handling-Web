                    <a href="~/Manuals/000.000 Section Name.pdf" download class="text-white">
                        <i class="fa fa-file-pdf"></i>3. Download Sample
                    </a>
                </div>
                <div class="col-md-1">
                </div>
        </div>
        <div class="card-header">
            <div class="form-group row">

                @*<h3 class="card-title col-sm-2">
                    <a class="box-title" href="#" id="create_new_Book"> <i class="fa fa-plus text-primary"></i>  Create Book </a>
                </h3>*@
                @*<h3 class="card-title col-sm-2">
                    <a class="box-title" href="#" id="create_new_Chapter"> <i class="fa fa-plus text-primary"></i>  Create Chapter </a>
